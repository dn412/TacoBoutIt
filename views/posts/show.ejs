<%- include('../partials/nav') %>

<div class="container-md">
    <div class="row justify-content-between">
        <article class="col-5 border border-dark">
            <div class="border border-dark text-center"> 
            <% if (post.readyToPost) {%>
                    <h6>Ripe & Ready to Post</h6>
            <% } else { %>
                    <h6>Not Ripe Yet</h6>
            <% } %>
             
    </div>
    <% if (post.color) {%>
        <div class="color-div border border-dark text-center" style="background-color: <%= post.color %>">
        </div>
    <% } %>
    <% if (post.owner?._id.equals(user?._id)) {%>
        <div class="container-md">
            <a href="/posts/edit/<%= post._id %>" class="btn btn-info m-3">
                Edit <%= post.title %>
            </a>
            <form action="/posts/<%= post._id %>?_method=DELETE" method="POST">
                <input type="submit" class="btn btn-danger m-3" value="Delete <%= post.title %>">
            </form>
        </div>
    <% } %>
</article>
    </div>
    </div>
