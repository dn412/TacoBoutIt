<div class="container-sm">
    <form action="/posts" method="POST">
        <fieldset>
            <label class="form-label">Name:</label>
            <input type="text" class="form-control" name="name" placeholder="What kind of fruit?" required>
            <label class="form-label">Color:</label>
            <input type="color" class="form-control" name="color" placeholder="What color is it?" required>
            <label class="form-label">Ready To Post:</label>
            <input type="checkbox" class="form-check-control" name="readyToPost" >
            <br>
            <hr>
            <input type="submit" class="btn btn-success" value="Create New Post">
        </fieldset>
    </form>
</div>

